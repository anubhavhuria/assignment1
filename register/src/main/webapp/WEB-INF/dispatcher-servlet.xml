<beans>
    <bean name="/register.do" class="com.register.controller.UserRegistercontroller">
        <property name="UserRegisterservice" ref="service">
    </property></bean>
    <bean class="org.springframework.web.servlet.view.InternalResourceViewResolver">
    <property name="prefix" value="/WEB-INF/html/"></property>
    <property name="suffix" value=".html"></property>
    </bean>
    <bean id="dataSource" class="org.apache.commons.dbcp.BasicDataSource">  
    <property name="driverClassName" value="oracle.jdbc.driver.OracleDriver"></property>  
    <property name="url" value="jdbc:oracle:thin:@localhost:1521:xe"></property>  
    <property name="username" value="system"></property>  
    <property name="password" value="1234"></property>  
</bean>  
   
<bean id="localsessionFactory" class="org.springframework.orm.hibernate3.annotation.AnnotationSessionFactoryBean">  
    <property name="dataSource" ref="dataSource"></property>  
       
    <property name="AnnotatedClasses">  
    <list>  
    <value>com.register.model.UserRegister</value>  
    </list>  
    </property>  
       
    <property name="hibernateProperties">  
        <props>  
            <prop key="hibernate.dialect">org.hibernate.dialect.Oracle10gDialect</prop>  
            <prop key="hibernate.hbm2ddl.auto">update</prop>  
            <prop key="hibernate.show_sql">true</prop>  
               
        </props>  
    </property>  
</bean>  
   
<bean id="template" class="org.springframework.orm.hibernate3.HibernateTemplate">  
<property name="sessionFactory" ref="localsessionFactory"></property>  
</bean>  
<bean id="dao" class="com.register.Dao.Impl.UserRegisterDaoImpl">
<property name="hibernatetemplate" ref="template"></property>
</bean>
    <bean id="service" class="com.register.service.UserRegisterServiceImpl">
    <property name="UserRegisterDao" ref="dao"></property>
    </bean>
    </beans>